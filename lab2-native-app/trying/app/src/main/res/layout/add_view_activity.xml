<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/reviewInput"
        android:layout_width="225dp"
        android:layout_height="148dp"

        android:layout_marginTop="35dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="29dp"
        android:autoText="false"
        android:background="#FFFFFF"
        android:ems="10"
        android:fontFamily="casual"
        android:gravity="center_horizontal"
        android:inputType="textPersonName"
        android:text=""
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/returnButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/reviewLabel"
        app:layout_constraintTop_toBottomOf="@+id/ratingLabel" />

    <TextView
        android:id="@+id/reviewLabel"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:background="#219D1F"
        android:fontFamily="casual"
        android:gravity="center_horizontal"
        android:text="Review"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/reviewInput"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topBanner" />

    <TextView
        android:id="@+id/titleLabel"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:layout_marginStart="29dp"
        android:layout_marginLeft="29dp"
        android:layout_marginTop="45dp"
        android:layout_marginBottom="70dp"
        android:background="#B9CB53"
        android:fontFamily="casual"
        android:gravity="center_horizontal"
        android:text="Title"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/directorLabel"
        app:layout_constraintEnd_toStartOf="@+id/titleInput"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topBanner" />

    <EditText
        android:id="@+id/titleInput"
        android:layout_width="225dp"
        android:layout_height="45dp"

        android:layout_marginTop="45dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="70dp"
        android:autoText="false"
        android:background="#FFFFFF"
        android:ems="10"
        android:fontFamily="casual"
        android:gravity="center_horizontal"
        android:inputType="textPersonName"
        android:text=""
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@+id/directorInput"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/titleLabel"
        app:layout_constraintTop_toBottomOf="@+id/topBanner"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/directorLabel"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginBottom="20dp"
        android:background="#219D1F"
        android:fontFamily="casual"
        android:gravity="center_horizontal"
        android:text="Director"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/dateLabel"
        app:layout_constraintEnd_toStartOf="@+id/directorInput"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/directorInput"
        android:layout_width="225dp"
        android:layout_height="45dp"

        android:layout_marginTop="25dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="20dp"
        android:autoText="false"
        android:background="#FFFFFF"
        android:ems="10"
        android:fontFamily="casual"
        android:gravity="center_horizontal"
        android:inputType="textPersonName"
        android:text=""
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/dateInput"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/directorLabel"
        app:layout_constraintTop_toBottomOf="@+id/titleLabel" />

    <TextView
        android:id="@+id/dateLabel"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginBottom="20dp"
        android:background="#B9CB53"
        android:fontFamily="casual"
        android:gravity="center_horizontal"
        android:text="Date"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/ratingLabel"
        app:layout_constraintEnd_toStartOf="@+id/dateInput"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/dateInput"
        android:layout_width="225dp"
        android:layout_height="45dp"

        android:layout_marginTop="25dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="20dp"
        android:autoText="false"
        android:background="#FFFFFF"
        android:ems="10"
        android:fontFamily="casual"
        android:gravity="center_horizontal"
        android:inputType="textPersonName"
        android:text=""
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/ratingInput"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/dateLabel"
        app:layout_constraintTop_toBottomOf="@+id/directorLabel" />

    <TextView
        android:id="@+id/ratingLabel"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginBottom="20dp"
        android:background="#219D1F"
        android:fontFamily="casual"
        android:gravity="center_horizontal"
        android:text="Rating"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/reviewLabel"
        app:layout_constraintEnd_toStartOf="@+id/ratingInput"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/ratingInput"
        android:layout_width="225dp"
        android:layout_height="45dp"

        android:layout_marginTop="25dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="20dp"
        android:autoText="false"
        android:background="#FFFFFF"
        android:ems="10"
        android:fontFamily="casual"
        android:gravity="center_horizontal"
        android:inputType="textPersonName"
        android:text=""
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/reviewInput"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ratingLabel"
        app:layout_constraintTop_toBottomOf="@+id/dateLabel" />

    <ImageView
        android:id="@+id/returnedButton"
        android:layout_width="163dp"
        android:layout_height="83dp"
        android:layout_marginStart="124dp"
        android:layout_marginLeft="124dp"
        android:layout_marginEnd="124dp"
        android:layout_marginRight="124dp"
        android:onClick="go_back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/returnbutton" />

    <ImageView
        android:id="@+id/icon"
        android:layout_width="90dp"
        android:layout_height="67dp"
        app:layout_constraintBottom_toTopOf="@+id/titleLabel"
        app:layout_constraintEnd_toStartOf="@+id/topBanner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/topicon" />

    <ImageView
        android:id="@+id/topBanner"
        android:layout_width="332dp"
        android:layout_height="73dp"
        android:layout_marginStart="82dp"
        android:layout_marginLeft="82dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/banneradd" />

    <ImageView
        android:id="@+id/returnButton"
        android:layout_width="236dp"
        android:layout_height="145dp"
        android:layout_marginBottom="49dp"
        android:onClick="add_movie"
        app:layout_constraintBottom_toBottomOf="@+id/returnedButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/addbutton" />

</androidx.constraintlayout.widget.ConstraintLayout>